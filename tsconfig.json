{
  "compilerOptions": {
   "module": "esnext",
   "target": "es5",
   "lib": ["es6", "dom", "es2016", "es2017", "esnext"],
   "jsx": "react",
   "moduleResolution": "node",
   "baseUrl": "./",
   "allowSyntheticDefaultImports": true,
   "allowJs": true,
   "resolveJsonModule": true,
   "esModuleInterop": true,
   "importHelpers": true,
   "declaration": true,
   "declarationDir": "lib",
   "sourceMap": true,
   "rootDir": "src",
   "outDir": "build",
   "paths": {
    "components/*": ["./src/components/*"],
    "components": ["./src/components"],
    "utilities": ["./src/utilities"],
    "assets/*": ["./src/assets/*"],
    "templates": ["./src/templates"],
    "templates/*": ["./src/templates/*"],
   }
  },
  "types": ["node", "react", "react-is/next"],
  "include": ["src/**/*"],
  "exclude": [
   "node_modules",
   "coverage",
   "bin",
   "src/test-utils/",
   "src/docs/**/*",
   "src/assets/**/*",
  ]
 }
